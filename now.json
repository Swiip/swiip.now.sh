{
  "version": 2,
  "name": "swiip",
  "public": true,
  "alias": "swiip.now.sh",
  "routes": [
    { "src": "/api/(.*)", "dest": "packages/server/$1" },
    {
      "src": "/",
      "dest": "/packages/client/index.html",
      "headers": { "Link": "</index.js>; rel=preload; as=script, </Swiip.jpg>; as=image; rel=preload" }
    },
    { "src": "/(?!api)(.+)", "dest": "/packages/client/$1" }
  ],
  "builds": [
    { "src": "packages/server/index.js", "use": "@now/node" },
    { "src": "packages/client/**", "use": "@now/static" }
  ]
}
